@model Cafeteria.Models.Almacen.Notaentrada.Notaentradabean

@{
    ViewBag.Title = "Detalle de la Nota de entrada";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("ListarNotaEntrada", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
{
   @Html.ValidationSummary(false)
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>@ViewBag.Title</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreProveedor)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombreProveedor)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreCafeteria)<span class="req">*</span>
                <div class=" formRight"> @Html.DisplayFor(model => model.nombreCafeteria)  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow">@Html.LabelFor(model => model.fechaEmitida)<span class="req">*</span>
                <div class="formRight"> @Html.DisplayFor(model => model.fechaEmitida) </div>
                <div class="clear"></div>
            </div>
            
        </div>
    </fieldset>
    
    
    <div class="widget">

          <div class="title"><img src="../../Content/images/icons/dark/frames.png" alt="" class="titleIcon" /><h6>Lista de Productos</h6></div>

            <table cellpadding="0" cellspacing="0" width="100%" class="sTable">

                <thead>
                    <tr>
                        <td>Idingrediente</td>
                        <td>Ingrediente</td>
                        <td>Cantidad Recibida</td>

                    </tr>
                </thead>

                <tbody>
                        @for (int i = 0; i < Model.detalleNotaEntrada.Count; i++)
                        {
                    <tr>       
                        <td> @Html.DisplayFor(model => model.detalleNotaEntrada[i].id) </td>
                        <td> @Html.DisplayFor(model => model.detalleNotaEntrada[i].nombre) </td>
                        <td> @Html.DisplayFor(model => model.detalleNotaEntrada[i].cantidadentrante) </td>

                      
                    </tr>       
                        }


                </tbody>

            </table>

      </div>

    
    <p>
       
        @Html.ActionLink("Regresar", "ListarNotaEntrada/" + Model.idOrdenCompra, "Notaentrada")
    </p>
    
}