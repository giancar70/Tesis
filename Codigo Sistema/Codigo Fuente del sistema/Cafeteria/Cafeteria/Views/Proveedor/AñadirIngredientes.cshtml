@model Cafeteria.Models.Compra.Proveedor.ProveedorxIngredienteBean
@{
    ViewBag.Title = "Añadir Ingredientes";
}

<h2>@ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    
  @using (Html.BeginForm("AñadirIngredientes", "Proveedor", FormMethod.Post, new { @class = "form", id = "validate" }))
  {
    @Html.HiddenFor(model => model.idProveedor)
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Proveedor</h6>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.idProveedor)
                <div class=" formRight"> @Html.DisplayFor(model => model.idProveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombreProveedor)
                <div class=" formRight"> @Html.DisplayFor(model => model.nombreProveedor, new { @readonly = "readonly" })  </div>
                <div class="clear"></div>
            </div>
            
            
        </div>
    </fieldset>
      for (int i = 0; i < Model.listadeIngredientesProveedor.Count; i++)
      {
        @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].id)  
                
      }
      
      <p></p> <p></p>
    
      
   <div class="wrapper">
    <div class="widget">
      <div class="title">
      <h6>Lista de Ingredientes</h6>
      </div>
      
      <div class="dataTables_wrapper">
            
            <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable">
    <thead>
        <tr>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:150px;" >
                <div class="DataTables_sort_wrapper">
                IdIngrediente
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
             <th class="ui-state-default" rowspan="1" colspan="1" style="width:100px;" >
                <div class="DataTables_sort_wrapper">
                Ingrediente
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:100px;" >
                <div class="DataTables_sort_wrapper">
                Precio
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>

        </tr>
    </thead>

    <tbody>
             @for (int i = 0; i < Model.listadeIngredientesProveedor.Count; i++)
             {

                 if (!Model.listadeIngredientesProveedor[i].Estado_disponible)
                 {  
                    <tr class="gradeA odd">       
                
                        <td class="formRow"> @Html.DisplayFor(model => model.listadeIngredientesProveedor[i].id) </td>
                        <td class="formRow"> @Html.DisplayFor(model => model.listadeIngredientesProveedor[i].nombre) </td>
                        <td class="formRow"> 
                            @Html.TextBoxFor(model => model.listadeIngredientesProveedor[i].precio2, new { @class = "validate[custom[onlyNumberSp]]", name = "numsValid", placeholder = "0.00" })
                            
                        </td>
                    </tr>
                 }
                 else
                 {
                      @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].id) 
                      @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].nombre) 
                       @Html.HiddenFor(model => model.listadeIngredientesProveedor[i].precio)   
                 }
             }
    </tbody>
    </table>
    </div> 
          </div>
</div>
      
          
      
      
        <p>
            <input type="submit" value="Aceptar" class = "redB" />

        </p>    
        
       <a href="javascript:history.back()">Regresar</a>
  }
