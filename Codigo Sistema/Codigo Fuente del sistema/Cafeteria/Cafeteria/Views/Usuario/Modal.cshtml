@model Cafeteria.Models.Administracion.Usuario.UsuarioxSucursalBean
@{
    ViewBag.Title = "Asignar Perfil";
}



@using (Html.BeginForm("GG2", "Usuario", FormMethod.Post, new { @class = "form" } ))
{
    <fieldset>
        <div class = "widget" >

        @Html.HiddenFor(model => model.ID)

           <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable">
            <thead>
                <tr>
                    <th class="ui-state-default" rowspan="1" colspan="1" style="width:80px;" >
                        <div class="DataTables_sort_wrapper">
                        Nombre
                        <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                        </div>
                     </th>

                    <th class="ui-state-default" rowspan="1" colspan="1" style="width:50px;" >

                    </th>
                </tr>
            </thead>
                    
                    @for (int i = 0; i < Model.perfilesDelUsuario.Count; i++)
                    {
                        <tr>
                         <td>@Html.DisplayFor(model => model.perfilesDelUsuario[i]) </td>  @Html.HiddenFor(model => model.perfilesDelUsuario[i])
                         <td>@Html.CheckBoxFor(model => model.estadosDePerfiles[i], true) </td>
                         </tr>
                    }

           </table>
        </div>

        
    </fieldset>
    
    <p>
            <input class = "redB" type="submit" value="Guardar" /> 
</p>
}