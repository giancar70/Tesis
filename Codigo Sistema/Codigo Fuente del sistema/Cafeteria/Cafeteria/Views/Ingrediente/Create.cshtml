@model Cafeteria.Models.Almacen.Ingrediente.IngredienteBean

<h2></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Ingrediente", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="widget">
          <div class="title"><h6>Registrar Ingrediente</h6></div>
          <div class="formRow">
            <span>Nombre</span>
            <div class = "formRight" > 
                @Html.TextBoxFor(model => model.nombre, new { maxlength = "40", placeholder = "Maximo 40 caracteres aqui" })
                @Html.ValidationMessageFor(model => model.nombre)
            </div><div class="clear"></div>
          </div>
          <div class="formRow">
            <span>Descripcion</span>
            <div class="formRight">
                @Html.TextAreaFor(model => model.descripcion, new { maxlength = "200", placeholder = "Maximo 200 caracteres aqui" }) 
            </div><div class="clear"></div>
           </div>
        </div>
        <p>
            <input type="submit" value="Registrar" class = "redB" />
        </p>
    </fieldset>
}

<div>
    <a href="javascript:history.back()">Regresar</a>
</div>
