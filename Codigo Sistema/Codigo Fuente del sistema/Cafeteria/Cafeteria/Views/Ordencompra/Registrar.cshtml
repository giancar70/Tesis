@model Cafeteria.Models.Compra.Ordencompra.OrdencompraBean

@{
    ViewBag.Title = "Registrar Orden de Compra";
}

<h2>Registrar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Registrar", "OrdenCompra", FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
            <div class="widget">
            <div class="title">
                <h6>Seleccionar Proveedor</h6>
            </div>
            @Html.HiddenFor(model => model.idCafeteria) 
            <div class="formRow">
               @Html.LabelFor(model => model.idProveedor)                              
                
                <div class = "formRight" >
                <div class = "selector">@Html.DropDownListFor(model => model.idProveedor, Model.listaProveedor)</div></div>
                <div class = "clear" ></div>
            </div>

            </div>
            
    </fieldset>
            <p></p> <p></p> <p></p>
    <div>
           <input type="submit" value="Seleccionar" class = "redB" /> |
           @Html.ActionLink("Regresar", "Index")
    </div>
}
