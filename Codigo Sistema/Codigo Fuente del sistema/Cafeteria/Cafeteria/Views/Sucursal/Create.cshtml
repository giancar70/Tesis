@model Cafeteria.Models.Administracion.Sucursal.SucursalBean

@{
    ViewBag.Title = "Create";
}

<h2>Registrar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Ubigeo.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var cmbDepartamento = $('#idDepartamento');
        cmbDepartamento.val('');
    });
</script>


@using (Html.BeginForm("Create", "Sucursal", FormMethod.Post, new { @class = "form" } ))
{
    <fieldset>
        <div class = "widget" >
            <div class = "title" >
                <img src="@Url.Content("~/Content/images/icons/dark/list.png")"  class="titleIcon">
                <h6>Registrar Sucursal</h6>
            </div>
            
             <div class = "formRow" >
                @Html.LabelFor( model => model.nombre )
                <div class = "formRight" >
                    @Html.TextBoxFor( model => model.nombre )
                    
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.telefono1 )
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.telefono1, new { maxlength = "8" })
                    
                </div>
                <div class = "clear" ></div>
            </div>
            <div class = "formRow" >
                @Html.LabelFor(model => model.telefono2)
                <div class = "formRight" >
                    @Html.TextBoxFor(model => model.telefono2, new { maxlength = "8" })
                    
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.direccion )
                <div class = "formRight" >
                    @Html.TextBoxFor( model => model.direccion )
                    
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.idDepartamento )
                <div class = "formRight" >
                    @Html.DropDownListFor(model => model.idDepartamento, new SelectList(Model.departamentos, "id", "nombre"), "Elije un departamento...")
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor( model => model.idDepartamento )
                </div>
                <div class = "clear" ></div>
            </div>

                @for (int i = 0; i < Model.departamentos.Count; i++)
                {
                    @Html.HiddenFor(m => m.departamentos[i].ID)
                    @Html.HiddenFor(m => m.departamentos[i].nombre)
                }

            <div class = "formRow" >
                @Html.LabelFor( model => model.idProvincia )
                <div class = "formRight" >
                    @Html.DropDownListFor(model => model.idProvincia, Enumerable.Empty<SelectListItem>(), "Elije un departamento primero...") 
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor( model => model.idProvincia )
                </div>
                <div class = "clear" ></div>
            </div>

            <div class = "formRow" >
                @Html.LabelFor( model => model.idDistrito )
                <div class = "formRight" >
                    @Html.DropDownListFor(model => model.idDistrito, Enumerable.Empty<SelectListItem>(), "Elije una provincia primero...") 
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.ValidationMessageFor( model => model.idDistrito )
                </div>
                <div class = "clear" ></div>
            </div>

        </div>
        <p>
            <input class = "redB" type="submit" value="Crear" /> |
            <a href="javascript:history.back()">Regresar</a>
        </p>
    </fieldset>
}
