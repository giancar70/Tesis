@model Cafeteria.Models.Administracion.Sucursal.SucursalBean

@{
    ViewBag.Title = "Lista Personal";
}

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>



 @using (Html.BeginForm("Modificarpersonal", "Sucursal", FormMethod.Post, new { @class = "form" }))
 {   
    
    <fieldset>
        <div class="widget">
            <div class="title">
                <h6>Sucursal</h6> @Html.HiddenFor(model => model.id) 
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.nombre)
                <div class=" formRight">  @Html.DisplayFor(model => model.nombre)  </div>@Html.HiddenFor(model => model.nombre) 
                <div class="clear"></div>
            </div>
            <div class="formRow"> @Html.LabelFor(model => model.telefono1) 
                <div class=" formRight">  @Html.DisplayFor(model => model.telefono1)-  @Html.DisplayFor(model => model.telefono2) </div>@Html.HiddenFor(model => model.telefono1) @Html.HiddenFor(model => model.telefono2)

                <div class="clear"></div>
            </div>
            
             @for (int i = 0; i < Model.listadepersonal.Count; i++)
             {
                    @Html.HiddenFor(model => model.listadepersonal[i].ID)  
                 @Html.HiddenFor(model => model.listadepersonal[i].nombres)
                   @Html.HiddenFor(model => model.listadepersonal[i].nombrePerfilUsuario)
                
             }
        </div>
    </fieldset>
    

    <p></p>
    <a href="@Url.Action("añadirpersonal", new { id = Model.id })"><img src="../../Content/images/icons/color/plus.png", alt="Create" />Añadir más Personal</a>
    
   <div class="title"><h6>Lista de usuario</h6> </div>

        
         
     <div class="wrapper">
    <div class="widget">
      <div class="title">
      <h6>Lista de Personas</h6>
      </div>
      <div class="dataTables_wrapper">
            
            <table cellpadding = "0" cellspacing = "0" width = "100%" class = "display dTable">
    <thead>
        <tr>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:209px;" >
                <div class="DataTables_sort_wrapper">
                ID
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
            <th class="ui-state-default" rowspan="1" colspan="1" style="width:209px;" >
                <div class="DataTables_sort_wrapper">
                Nombre
                <span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-s"></span>
                </div>
             </th>
        </tr>
    </thead>

    <tbody>

    @for (int i = 0; i < Model.listadepersonal.Count; i++)
    {
        <tr class="gradeA odd">
            <td class="sorting_1">@Html.DisplayFor(model => model.listadepersonal[i].ID)</td>
            <td class="sorting_1">@Html.DisplayFor(model => model.listadepersonal[i].nombres) @Html.DisplayFor(model => model.listadepersonal[i].apPat)
                                    @Html.DisplayFor(model => model.listadepersonal[i].apMat)
            </td>
        </tr>
    }
    </tbody>
    </table>
    </div>
        
    </div>
</div>
     
     
    <p></p>
    <p>
        @if (ViewBag.estado == 0)
        {
            <input type="submit" value="Modificar" class = "redB" />
        }    
        
        <a href="javascript:history.back()">Regresar</a>
    </p>
 }


